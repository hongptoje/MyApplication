<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="39dp"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/transitTotalTime"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="분"
        android:textColor="#000"
        android:textSize="18dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/transitArrivalTime"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="도착시간"
        android:textColor="#000"
        android:textSize="11dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/walkTime"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="도보"
        android:textColor="#000"
        android:textSize="11dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        />

        <TextView
            android:id="@+id/transitFare"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="요금"
            android:textColor="#000"
            android:textSize="11dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/trafficDistance"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="거리"
            android:textColor="#000"
            android:textSize="13dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/transitStart"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="출발"
            android:textColor="#000"
            android:textSize="13dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/transitEnd"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="도착"
            android:textColor="#000"
            android:textSize="13dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/mapObj"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="mapObj"
            android:textColor="#000"
            android:textSize="13dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/jsonInfo"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="mapObj"
            android:textColor="#000"
            android:textSize="13dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#686868"
        >
    </LinearLayout>

</LinearLayout>